<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgd_top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TicketsActivity" >

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text=" "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#00C9EA" />

    	
        <LinearLayout
            android:id="@+id/lay_senhas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >
            
             <TextView
		        android:id="@+id/spacer"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:background="#000000"
		        android:gravity="center"
		        android:text=""
		        android:textColor="#000000"
		        android:textSize="1sp" />

             <TextView
                 android:id="@+id/current_ticket_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Senha Actual"
                 android:layout_gravity="center"
                 android:textColor="#00C9EA"
                 android:textAppearance="?android:attr/textAppearanceMedium" />
              
		    <TextView
		        android:id="@+id/current_ticket"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:text="---"
		        android:textColor="#00C9EA"
		        android:textSize="86sp" />
		    
		    <TextView
		        android:id="@+id/spacer"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:background="#000000"
		        android:gravity="center"
		        android:text=""
		        android:textColor="#000000"
		        android:textSize="1sp" />
		    
		    
		    <TextView
                 android:id="@+id/user_ticket_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Sua Senha"
                 android:layout_gravity="center"
                 android:textColor="#00C9EA"
                 android:textAppearance="?android:attr/textAppearanceMedium" />
		
		    <TextView
		        android:id="@+id/user_ticket"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:text="---"
		        android:textColor="#00C9EA"
		        android:textSize="86sp" />
		    
		    <TextView
		        android:id="@+id/spacer"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:background="#000000"
		        android:gravity="center"
		        android:text=""
		        android:textColor="#000000"
		        android:textSize="1sp" />

		    <LinearLayout
		        android:id="@+id/time_lay"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:orientation="horizontal" >

		        <TextView
		            android:id="@+id/time_wait_fixo"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Tempo de espera (previsão): "
		            android:textColor="#00C9EA"
		               android:layout_gravity="left" 
		            android:textSize="14sp" />

		        <TextView
		            android:id="@+id/time_wait_minutes"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="- minutos"
		            android:textColor="#00C9EA"
		            android:layout_gravity="right" 
		            android:textSize="14sp" />
		     </LinearLayout>
		     
		     <LinearLayout
		        android:id="@+id/wait_lay"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
		         <TextView
		            android:id="@+id/waiting_fixo"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="À sua frente: "
		            android:textColor="#00C9EA"
		               android:layout_gravity="left" 
		            android:textSize="14sp" />

		        <TextView
		            android:id="@+id/waiting_tickets"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:text="0"
		            android:textColor="#00C9EA"
		            android:textSize="14sp" />

		    </LinearLayout>
		    
		     <ListView
	            android:id="@+id/Ticketlist"
	             android:layout_marginTop="5dp"
	              android:layout_marginBottom="5dp"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:divider="#00C9EA"
	            >

      		 </ListView>
		
		</LinearLayout>

    </LinearLayout>

</RelativeLayout>
